<div class="container-fluid">
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
    <h1 class="center-text">The SLU Creatures</h1>
  </div>
</div>
<div class="row">
  <div class="center" style="width: 186px;">
    <a href="/api/creatures/new" class="center">Add a New Creature Sighting!</a>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
    <table class="table table-striped itin-delete-table" style="margin-top: 40px">
      <tbody>
      
        <tr>
          <td> 
           <h5><%= @creature.name %></h5>
          </td>
          <td>
            <p><%= @creature.description %> </p>
          </td>
          <td>
           <ul class="tag-list">
            <% for @tag in @creature.tags %>
           <li> <%= @tag.name %></li>
            <%end%>
          </ul>
          </td>
          <td style="text-align: right;">
           <a class="edit-link" href='/api/creature/<%=creature.id%>/edit'>Edit</a>
           <a class="delete-link" href='#'>Delete</a>
          </td>
        </tr>
    
    </tbody>
    </table>
  </div>
</div>
</div>